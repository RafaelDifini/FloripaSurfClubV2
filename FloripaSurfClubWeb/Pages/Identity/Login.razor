@page "/login"
@using System.ComponentModel.DataAnnotations
@layout Headless
@inherits LoginPage

<PageTitle>Entrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center pb-8 pb-8">
                <img src="imgs/logosurf.png" alt="Floripa Surf Club - Agendamento" />
            </div>

            <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator />
               
                <MudTextField T="string"
                              Label="E-mail"
                              HelperText="Campo obrigatório"
                              InputType="InputType.Email"
                              For="@(() => InputModel.Email)"
                              @bind-Value="InputModel.Email" />

                <MudTextField T="string"
                              Label="Senha"
                              InputType="InputType.Password"
                              HelperText="Campo obrigatório"
                              For="@(() => InputModel.Senha)"
                              @bind-Value="InputModel.Senha" />

     
                <div class="d-flex mt-8">
                    @if (IsBusy)
                    {
                        <MudProgressCircular Color="Color.Info" Indeterminate="true" />
                    }
                    else
                    {
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">ENTRAR</MudButton>
                        <MudSpacer />
                        <MudButton Href="/registrar" Variant="Variant.Filled" Color="Color.Primary">REGISTRAR</MudButton>
                    }
                </div>
            </EditForm>

        </MudPaper>
    </MudItem>
</MudGrid>
